@model IEnumerable<MvcWebsite.Models.Board>

@{
    ViewData["Title"] = "the boards";
    int colCount = 0;
}
<div class="container justify-content-center">

    <div class="row mb-3 justify-content-center border-bottom">
        <div class="col-auto mb-2">
            <h1>@ViewData["Title"] <small><a class="menu-item" asp-action="Create">+new</a></small></h1>
        </div>
    </div>

    <div class="row mb-1 justify-content-center">
        @foreach (var item in Model)
        {
            if (colCount > 3)
            {
            @:</div><div class="row mb-1 justify-content-center">
                colCount = 0;
            }

            <div class="col-auto col-lg-3 col-md-6 col-sm-12">
                <div class="row">
                    <div class="col-12 mb-1">
                        <div class="@item.ColorClass">
                            <div class="center">
                                <div class="row justify-content-md-center">
                                    <div class="col-md-auto">
                                        <p style="font-weight:bolder;">@Html.DisplayFor(modelItem => item.Title)</p>
                                    </div>
                                </div>
                                <div class="row justify-content-md-center">
                                    <div class="col-md-auto">
                                        <p>@Html.DisplayFor(modelItem => item.Text)</p>
                                    </div>
                                </div>
                                <div class="row pull-down justify-content-md-center">
                                    <div class="col">
                                        <p><small>@Html.DisplayFor(modelItem => item.Tags)</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-auto">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-controller="Boards" asp-route-id="@item.Id"><img class="small-image" src="/images/edit.png" alt=""></a> |
                                    <a asp-action="Details" asp-controller="Boards" asp-route-id="@item.Id"><img class="small-image" src="/images/look.png" alt=""></a> |
                                    <a asp-action="Delete" asp-controller="Boards" asp-route-id="@item.Id"><img class="small-image" src="/images/delete.png" alt=""></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>   
            </div>

            colCount++;
        }
    </div>

</div>